<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Основные данные"
                android:textColor="@color/fon"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Содержание"
                android:textColor="@color/fon"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Заключение"
                android:textColor="@color/fon"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Визуальный осмотр"
                android:textColor="@color/fon"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button19"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Изоляция"
                android:onClick="insulation"
                android:textColor="@color/fon"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text='"фаза-нуль"'
                android:textColor="@color/fon"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button21"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Автоматические выключатели"
                android:textColor="@color/fon"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Дифференциальная защита"
                android:textColor="@color/fon"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button23"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:onClick="roomElement"
                android:text="Заземл. установки и элементы"
                android:textColor="@color/fon"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/buttons"
                android:text="Заземлители и заземл. устройства"
                android:textColor="@color/fon"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/another_buttons"
            android:text="Удаление данных"
            android:textColor="@color/fon" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>